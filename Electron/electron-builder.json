{
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "extraResources" : [
    {
      "from": "..",
      "filter": [
        "**/*.{exe,txt,j,mpq,ini,dll,eai,ai}",
        "!**/Electron",
        "!**/Manual",
        "!**/node_modules"
      ],
      "to": "."
    }
  ],
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "portable"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
