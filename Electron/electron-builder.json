{
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "extraResources" : [
    {
      "from": "../Scripts",
      "filter": ["**/*"],
      "to": "./Scripts"
    },
    {
      "from": "../MPQEditor.exe",
      "to": "./MPQEditor.exe"
    },
    {
      "from": "../AddToMPQ.exe",
      "to": "./AddToMPQ.exe"
    }
  ],
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "portable"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
