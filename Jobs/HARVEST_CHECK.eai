    //    call CreateDebugTag("Forced Harvest mine " + Int2Str(i), 10, own_town_mine[i], 3.00, 1.50)
    //  endif
    //  set i = i + 1
    //endloop
  if harvestnum == 0 and not race_manual_loading and home_town >= 0 and town_mine[home_town] != null and UnitAlive(town_mine[home_town]) then //and not race_uses_mine_expansion then running on elf breaks gold harvesting for all other mines for some reason
