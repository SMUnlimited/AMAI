endfunction

function HarvestCheckJob takes nothing returns nothing
  if HarvestSecondMine() then
    call TQAddJob(4, HARVEST_CHECK, 0)
  else
    call TQAddJob(40, HARVEST_CHECK, 0)
  endif
endfunction
