//============================================================================
//  global builds
//============================================================================
function global_init_strategy takes nothing returns nothing
    call AddHarass(1, 1, uHUNTRESS)
    call SetTierBlock(1, 0.75, 60, true)
    call SetTierBlock(2, 0.75, 90, true)
endfunction

function global_build_sequence takes nothing returns nothing
      // Global Upgrades
      if TownCountDone(uARCHER) > 4 and TownCountDone(uHIPPO) > 2 then
        call BuildUpgr(1, uUPG_HIPPO_TAME, 80)
      endif

      // Global Mercenaries
      call BuildUnit(2, merc_healer, 50)

      // Harassing
      if GetPlayerRace(nearest_enemy) != RACE_UNDEAD and TownCountDone(uHUNTRESS) > 5 then
        call Harass(1, HARASS_TARGET_PEONS, true, 4, 0.75, 0, true, 50, 80)
      endif
endfunction

