//============================================================================
//  global builds
//============================================================================
function global_init_strategy takes nothing returns nothing
    call AddBlock(8, uORC_ALTAR, true, 0, uZIGGURAT_1, 2)
    call SetTierBlock(1, 0.75, 60, true)
    call SetTierBlock(2, 0.75, 90, true)
    call AddHarass(1, 1, uGHOUL)
    call AddHarass(2, 2, uGHOUL)
    call AddHarass(3, 4, uGHOUL)
    call AddHarass(3, 2, uCRYPT_FIEND)
    set distraction_group = 3


endfunction
function global_build_sequence takes nothing returns nothing

    call DefendTownsDone(2, uZIGGURAT_2, 65)
    if tier >= 2 then
      call DefendTownsDone(1, uNECROPOLIS_2, 70)
    endif

    call BuildUnit(3, uZIGGURAT_2, 30)

    if TownCount(uGHOUL) == 0 and GetWood() < 500 then
      call BuildUnit(1, uGHOUL, 260)
    endif
    // Global Mercenaries
    call BuildUnit(2, merc_caster, 50)

    // Harassing
    if GetPlayerRace(nearest_enemy) != RACE_UNDEAD and TownCountDone(uGHOUL) > 10 then
      call Harass(2, HARASS_TARGET_PEONS, true, 5, 0.75, 0, true, 50, 120)
   endif
    if GetPlayerRace(nearest_enemy) == RACE_NIGHTELF and TownCountDone(uGHOUL) > 1 then
      call Harass(1, HARASS_TARGET_PEONS, true, 3, 0.75, 0, true, 10, 80)
    endif


endfunction

