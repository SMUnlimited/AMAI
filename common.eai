function InitCheckHarvest takes nothing returns nothing
  local group g = CreateGroup()
  local unit u = null
  local integer i = GOLD_MINE
  local real distance = 0
  if race_manual_loading then
    set i = race_manual_loading_mine
  elseif race_uses_mine_expansion then
    set i = racial_expansion
  endif
  call GroupEnumUnitsInRangeOfLoc(g, home_location, 1500, null)
  set g = SelectById(g, old_id[GOLD_MINE], true)
  set u = FirstOfGroup(g)
  call GroupRemoveUnit(g, u)
  if FirstOfGroup(g) != null or (u != null and i != GOLD_MINE ) then  // have more mind , UD and ELF cannot harvest
    set first_town_mine = 1  // mode one , fix all race harvest and expensive , expensive should prior take home_location mine
    if i != GOLD_MINE then
      call GroupAddUnit(g,u)  // add Group first mine
      loop
        set u = FirstOfGroup(g)
        exitwhen u == null
        set i = R2I(DistanceBetweenPoints_kd(home_location,GetUnitLoc(u)))  // human and orc need find closest mine
        if GetResourceAmount(u) > 0 and i <= distance then
          set distance = i
          set own_town_mine[0] = u
        endif
        call GroupRemoveUnit(g, u)
      endloop
    else
      call GroupClear(g)
      call GroupEnumUnitsInRangeOfLoc(g, home_location, 1500, null)
      set g = SelectById(g, old_id[i], true)
      set own_town_mine[0] = FirstOfGroup(g)  // UD and ELF find race mine
    endif
    if not race_manual_loading then
      call TQAddJob(2, HARVEST_CHECK, 0)  // elf alway run HARVEST_CHECK job
    endif
  elseif i != GOLD_MINE then  // some map home_location 1500 radius just one mine , but old war3 (maybe 1.24~1.28 , 1.36 no this bug) UD and ELF still cannot harvest(maybe need 2300 radius no more mine)
    set first_town_mine = 2  // mode two , fix UD harvest , because ELF always run HARVEST_CHECK job
    if race_uses_mine_expansion then
      call TQAddJob(2, HARVEST_CHECK, 0)  // no peon harvest, need run HARVEST_CHECK job
    endif
  endif
  call DestroyGroup(g)
  set g = null
  set u = null
endfunction

