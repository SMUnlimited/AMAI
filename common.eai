  local integer lvl = GetHeroLevel(u)
  if not IsUnitInGroup(u, unit_healing) then
    if lvl >= ver_hero_ultimate_level then
      return R2I((ver_hero_base_value + lvl + ver_hero_ultimate_value)/2 + 0.5)
    else
