  local integer middle = (lower + upper) / 2

  if sd < 0 then
    return null
  endif
  set ru_getfittingcreep = GetCreepCamp(1, middle, allow_air)
  if ru_getfittingcreep == null then
    return GetIntervalCreep(middle, upper, str, anti_air_strength, allow_air, sd - 1)
  else
    set creepstrength = GetCreepCampStrength(ru_getfittingcreep) + 1
    if balancing then
      //call Trace("Creep strength: " + Int2Str(creepstrength))
      call PingMinimap(GetUnitX(ru_getfittingcreep), GetUnitY(ru_getfittingcreep), 1)
    endif
    if creepstrength < str then
      if air_strength <= anti_air_strength then
        return ru_getfittingcreep
      else
        return GetIntervalCreep(lower, upper, str, anti_air_strength, false, sd)
      endif
    else
      return GetIntervalCreep(lower, middle, str, anti_air_strength, allow_air, sd - 1)
    endif
  endif
endfunction

