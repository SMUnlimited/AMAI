    if GetPlayerSlotState(Player(i)) == PLAYER_SLOT_STATE_PLAYING and Player(i) != ai_player and Player(i) != tp then
      if IsPlayerAlly(Player(i), ai_player) then
        set ally_sum = ally_sum + R2I(GetPlayerStrength(Player(i)))
