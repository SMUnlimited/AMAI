      return GetHeroStrength(u)
    else
      return R2I((GetUnitFoodUsed(u) + f) / 2 + 0.5)
    endif
  else
    if f >= ver_hero_ultimate_level then
      return R2I((GetUnitFoodUsed(u)+ f + ver_hero_ultimate_value) / 2 + 0.5)
    else
      return R2I((GetUnitFoodUsed(u) + f)/2 + 0.5)
    endif
  endif
  return 0
endfunction

