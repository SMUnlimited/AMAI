  call AttackMoveKill(target)
  call ReformUntilTargetDeadAM(target, false)
  call Chat(C_Done)
  call SleepInCombatAM()
  call Trace("===Attack Fully Finished===")
  set attack_running = false
  call Sleep(2.5)
