  if race_manual_loading then
    set mine = race_manual_loading_mine
  endif
  if first_town_mine > 0 then  //home_location have multiple mine or just one mine but UD and ELF cannot harvested
    set twm = TownCountDone(mine)
    set i = twm
  endif
  if twm < 0 then
