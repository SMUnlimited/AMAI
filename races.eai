//  harvest_gold
//============================================================================
function harvest_gold takes integer townid returns nothing
  local integer town_idx = 0
  if townid < own_town_num then
    set town_idx = own_town[townid]
    if TownHasMine(townid) or GetResourceAmount(town_mine[town_idx]) > 0 then
      call HarvestGold(townid,ver_optimal_gold)
    endif
  endif
endfunction

//============================================================================
//  peon_asignment
//============================================================================
function peon_assignment takes nothing returns nothing
  call ClearHarvestAI()

  if desperation_assault then
    return
  endif

  if race_manual_loading then
     if FoodSpace() <= 0 and TownCount(racial_peon) == TownCountDone(racial_peon) and TownCount(racial_peon) <= 4 then  // Scenario A
        //call HarvestGold(0, 2)  // no foodspace , no peon , need one harvest mine peon build Farms
        call HarvestWood(0, Max(1,TownCountDone(racial_peon) - 2))  //seize a seat
        //call HarvestGold(0, ver_optimal_gold - 2)                   //seize a seat
     elseif not hero_built[1] and TownCount(racial_peon) < 8 then  // Scenario B , game just started
        //call HarvestGold(0, 3)  // need more wisp HarvestWood , avoidance no wood cannot build and AI stop construction
        call HarvestWood(0, Max(1,TownCountDone(racial_peon) - 3))  //seize a seat
        //call HarvestGold(0, ver_optimal_gold - 3)                   //seize a seat
     else  //Scenario C
        //call HarvestGold(0, ver_optimal_gold)
     endif
      // seize a seat is must be retained , use tell AI have ver_optimal_gold peon harvest gold
      // if delete seize a seat , when AI From A or B to Scenario C ï¼Œwill have one or two peon cannot harvest , because no vacancy in the mine , but the peon order is harvest gold , the peon not controlled by HarvestWood
  else
    call harvest_gold(0)
    call harvest_gold(1)
    call harvest_gold(2)
    call harvest_gold(3)
  endif
  if race_has_ghouls then
    call HarvestWood(0, Max(harvesting_ghouls,0))
    if peons_assigned and ghouls_in_attack then
      call HarvestWood(0, Max(TownCountDone(racial_ghoul) - attacking_ghouls - harvesting_ghouls,0)) // spare ghouls not doing anything and not assigned to attack yet
      if attacking_ghouls > 0 then
         call FormGroupAM(0) // This will unforunately slow attack movement when reinforcing, but nothing we can do right now, only way to get attacking ghouls to stay off the lumber at present
      endif
    else
      call HarvestWood(0, Max(TownCountDone(racial_ghoul) - harvesting_ghouls,0)) // spare ghouls not doing anything
    endif  
    set peons_assigned = true  
  elseif race_manual_loading then
    call HarvestWood(0, 20)
  endif
  
  call ForcedHarvest()
  
endfunction

// Prevent building too far from base during early game start
function KeepHarvestLocal takes nothing returns nothing
  local group g = null
  local unit u = null
  local unit buildu = null
  local real buildx = 0
  local real buildy = 0
  if fixharvest < 60 then
    set g = CreateGroup()
    set fixharvest = fixharvest + 1
    call GroupEnumUnitsOfPlayer(g, ai_player, null)
    loop 
      set u = FirstOfGroup(g)
      exitwhen u == null
      if GetUnitTypeId(u) == old_id[racial_peon] and UnitAlive(u) then
        call CreateDebugTagLoc("O:" + Int2Str(GetUnitCurrentOrder(u)), 10, GetUnitX(u), GetUnitY(u), 1.00, 0.80)
        if not IsUnitInGroup(u, harvestgrp) and DistanceBetweenPoints_dk(GetUnitLoc(u), home_location) > front_base_distance * 1.25 and IsConstructionOrder(GetUnitCurrentOrder(u)) and (racial_rushcreep == 0 or (TownCount(racial_rushcreep) <= 0 and GetUnitCurrentOrder(u) != old_id[racial_rushcreep])) and GetUnitCurrentOrder(u) != old_id[racial_expansion] then // going on adventure building far away too early so force them back
          set buildu = CreatePathingUnitFull(buildu, Player(PLAYER_NEUTRAL_PASSIVE), GetUnitCurrentOrder(u), GetLocationX(home_location) + ISign() * GetRandomReal(500, 1000), GetLocationY(home_location) + ISign() * GetRandomReal(-1000, -500))
          set buildx = GetUnitX(buildu)
          set buildy = GetUnitY(buildu)
          call RemoveUnit(buildu)
          set buildu = null
          call IssuePointOrderById(u, GetUnitCurrentOrder(u), buildx, buildy)
        endif
      endif
      call GroupRemoveUnit(g, u)
    endloop
    call DestroyGroup(g)
    set g = null
  endif
endfunction

