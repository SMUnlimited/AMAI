function build_sequence takes nothing returns nothing
  call global_build_sequence()
  if towerrush then
    //call AddBlock(2, GRUNT, true, 0, STRONGHOLD, 1000)
    call BuildUnit(1, hero[1], 140)
    if needed1[race_tower_id] != 0 then
      call BuildUnit(1, needed1[race_tower_id], 130)
    endif
    if needed2[race_tower_id] != 0 then
      call BuildUnit(1, needed2[race_tower_id], 130)
    endif
    if needed3[race_tower_id] != 0 and needed3[race_tower_id] != UPGRADED then
      call BuildUnit(1, needed3[race_tower_id], 130)
    endif
    if race_tower_upgrade != 0 then
      if needed1[race_tower_upgrade] != 0 then
        call BuildUnit(1, needed1[race_tower_upgrade], 120)
      endif
      if needed2[race_tower_upgrade] != 0 then
        call BuildUnit(1, needed2[race_tower_upgrade], 120)
      endif
      if needed3[race_tower_upgrade] != 0 and needed3[race_tower_upgrade] != UPGRADED then
        call BuildUnit(1, needed3[race_tower_upgrade], 120)
      endif
    endif
    if race_tower_upgrade2 != 0 then
      if needed1[race_tower_upgrade2] != 0 then
        call BuildUnit(1, needed1[race_tower_upgrade2], 110)
      endif
      if needed2[race_tower_upgrade2] != 0 then
        call BuildUnit(1, needed2[race_tower_upgrade2], 110)
      endif
      if needed3[race_tower_upgrade2] != 0 and needed3[race_tower_upgrade2] != UPGRADED then
        call BuildUnit(1, needed3[race_tower_upgrade2], 110)
      endif
    endif
    if race_tower_item_must and race_tower_item != 0 then
      call BuildItem(race_tower_item_quantity, race_tower_item, 130)
    endif  

  endif
  if build_emergency_healing_item != 0 then
    // This occurs when tried to buy an emergency healing item but was unable to, so instead add to the build queue so all requirements can be built.
    call BuildItem(1, build_emergency_healing_item, 150)
  endif  
  if strategy >= rp_strat_length then
    call cmdBuild()
  else
#SEARCHCODE Strats strategy
  endif
endfunction

//============================================================================
//  attack_sequence_all
//============================================================================
function attack_sequence_all takes nothing returns nothing

  call Trace("Starting Attack Thread Loop") 

  if ver_heroes then
  loop
      exitwhen TownCountDone(hero[1]) > 0 or desperation_assault
      call StaggerSleep(2 * sleep_multiplier, 2 * sleep_multiplier + 2)
  //    call Trace("Attack Loop1")
  endloop
  endif

  call StaggerSleep(0,2)
  loop

    call HealArmy()
    //call Trace("RACIAL ATTACK: Army Healed") 

    //call HeroHealingBugFix()     // To hopefully fix bugs with attack system as will keep them running

    if ver_heroes then
      set creeping_only = AwaitMeleeHeroesAM()
    endif

    exitwhen player_defeated

    if no_attack_allowed then
      call Trace("RACIAL ATTACK: NO ATTACK SETTING IS ON")
    else

      if race_has_ghouls and race_ghouls_attack then
        call setup_ghouls()

        set peons_assigned = false
        set ghouls_in_attack = true
        call Trace("RACIAL ATTACK: Assigning Peons")
        loop
          exitwhen peons_assigned or desperation_assault
          call StaggerSleep(2, 3)
        endloop
        call Trace("RACIAL ATTACK: exit Assigning Peons")
      endif

      call Trace("RACIAL ATTACK: waiting for troops")
      loop
        exitwhen GetOwnStrength() >= minimum_attack_strength or desperation_assault
        call StaggerSleep(5 * sleep_multiplier, 5 * sleep_multiplier + 2)
      endloop
      call Trace("RACIAL ATTACK: exit waiting troops")

//      call Trace("About to Attack")
      call setup_force(false)
      call universal_attack_sequence()
      set ghouls_in_attack = false
    endif

    call StaggerSleep(sleep_multiplier,sleep_multiplier + 2)
  endloop
endfunction

